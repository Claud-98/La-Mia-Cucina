<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/showMealFragment">
    <fragment
        android:id="@+id/showMealFragment"
        android:name="com.example.lamiacucina.ShowMealFragment"
        android:label="fragment_show_meal"
        tools:layout="@layout/fragment_show_meal" >
        <action
            android:id="@+id/showMealDetailsAction"
            app:destination="@id/mealDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.lamiacucina.MealDetailsFragment"
        android:label="fragment_meal_details"
        tools:layout="@layout/fragment_meal_details" >
        <argument
            android:name="meal"
            app:argType="com.example.lamiacucina.models.Meal" />
        <action
            android:id="@+id/showIngredientsAction"
            app:destination="@id/ingredientsFragment" />
        <action
            android:id="@+id/show_cookingProcessAction"
            app:destination="@id/cookingProcessFragment" />
    </fragment>
    <fragment
        android:id="@+id/ingredientsFragment"
        android:name="com.example.lamiacucina.IngredientsFragment"
        android:label="fragment_ingredients"
        tools:layout="@layout/fragment_ingredients" >
        <argument
            android:name="meal"
            app:argType="com.example.lamiacucina.models.Meal" />
    </fragment>
    <fragment
        android:id="@+id/cookingProcessFragment"
        android:name="com.example.lamiacucina.CookingProcessFragment"
        android:label="fragment_cooking_process"
        tools:layout="@layout/fragment_cooking_process" >
        <argument
            android:name="meal"
            app:argType="com.example.lamiacucina.models.Meal" />
    </fragment>
</navigation>